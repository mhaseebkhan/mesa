%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Untitled Document
  %body{:style => "margin: 0; padding: 0;"}
    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :width => "500px"}
      %tr
        %td{:height => "80", :valign => "top"}
          %img{:alt => "Logo Mesa", :height => "80", :src => "http://mesacadeira.herokuapp.com/assets/mesa-head.png", :style => "display: block;background-color: #000;", :width => "500"}/
      %tr
        %td{:align => "left", :bgcolor => "#1a1a1a", :style => "padding: 40px;", :valign => "top"}
          %h5{:style => "padding-bottom:40px"}
            %font{:color => "#ffffff", :face => "Verdana, Geneva, sans-serif", :size => "+3"}
          %blockquote{:style => "border-left:1px solid #ccc;padding: 1.5em 10px;padding: 0.5em 10px 0.5em 12px;"}
            %font{:color => "#ffffff", :face => "Verdana, Geneva, sans-serif", :size => "+2"}
              #{@user_name} need help finding: #{@search_keys}
              %br
              To get in touch with him use the e-mail #{@user_email}
          %a{:href => "http://mesacadeira.herokuapp.com", :style => "text-align:center"}
            %img{:alt => "go to website", :src => "http://mesacadeira.herokuapp.com/assets/goto-website.png", :style => "padding: 150px 65px 65px 65px;"}/



