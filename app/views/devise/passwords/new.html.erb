<div class="container login_sec">
  <div class="panel panel-default login_sec_box">
    <div class="login_heading">Forgot Password</div>
    <div class="panel-body">
      <div class="reset_pas_desc"><p>Enter your email address</p></div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <label class="control-label col-sm-2 login_label" for="email">Email:</label>
          <div class="col-sm-10">
            <!--<input type="email" class="form-control login_input" id="email" placeholder="Enter email">-->
            <%= f.email_field :email, autofocus: true, class: 'form-control login_input', id:'email', placeholder: 'Enter email' %>
          </div>
        </div>
        <div class="form-group margin-top25">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Send Instructions', class: 'btn btn-default btn_login pull-right' %>
          </div>
        </div>
        <div class="form-group margin-top25">
          <label class="pull-right login_forget" for="pwd">
            <!--<a href="forgot_password.html">I forgot my password</a>-->
            <%= link_to 'Log in', new_session_path(resource_name) %>
          </label>
        </div>

      <% end %>

    </div>
  </div>
</div>
