<% if @code_list %>
	<ul>
	<% @code_list.each do |code|%>
		<li><%= code.code_text %>
		<% if code.out_to.to_s == "" %>
			<span><input id= "code_out_to_<%= code.id %>" type="text" value= "Enter name here" ><button onclick="save_code(<%= code.id %>);">Save</button></span>	
		<% else %>	 
			<span>out to: <%= code.out_to %> </span>
		<% end %>
		</li>
	<% end%>
	</ul>
	
<% end %>

<script type="text/javascript">
    function show_connected_user_detail(user_id){
     var url = '/get_user';
	    $.ajax({
		url:url,
		type:'get',
		data : {user_id: user_id },
		success:function (data) {
		    {
		    	$("#invite_col3").html(data);

   		    }
		}
	    });

       
   }

      
    function save_code(code_id){
     var out_to = document.getElementById( "code_out_to_"+code_id ).value   
     var url = '/invitations/save_code?id='+code_id+'&out_to='+out_to;
	    $.ajax({
		url:url,
		type:'get',
		success:function (data) {
		    {
		    	$("#code_list").html(data);
			//$("#col3").html(data);
   		    }
		}
	    });

       
   }

</script>
